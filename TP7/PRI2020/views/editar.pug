extends layout

block content
    .w3-card-4
        header.w3-container.w3-green
            form(method="get" action="/alunos").w3-right
                button(type="submit").w3-dark-gray.w3-xlarge Voltar à lista de alunos
            h2=title
        h3 Preencha os seguintes campos:
        form(method="post" action='/alunos/' + aluno.Número).w3-margin-left
            div.input
                span.label Nome
                input(type="text", name="nome", value=aluno.Nome)
            div.input
                span.label Git
                input(type="text", name="git", value=aluno.Git)
            //tpc
            //tpc
            div.actions
                input(type="submit", value="Atualizar")
