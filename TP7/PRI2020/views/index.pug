extends layout

block content
  .w3-card-4
      header.w3.container.w3-green
          form(method="get" action="/alunos/registar").w3-right
            button(type="submit").w3-dark-gray.w3-xlarge Registar Aluno
          h2.w3-center= title   
      if lista.length > 0
          .w3-container
              table(class="w3-table-all")
                  tr
                      th Número
                      th Nome
                      th Git
                  each a in lista
                      tr
                          td= a.Número
                          td
                            a(href='http://localhost:7777/alunos/' + a.Número) #{a.Nome}
                          td
                            a(href=a.Git) #{a.Git}
      else
          .w3-container
              p Ainda nao há alunos necessários...
      footer(class="w3-container w3-green")
          adress Gerado por Pedro Parente
